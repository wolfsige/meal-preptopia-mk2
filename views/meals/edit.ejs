<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/meals/<%= meal._id %>?_method=PUT" method="POST">
    <label for="title-input">Title:</label>
    <input 
      type="text" 
      name="title" 
      value="<%= meal.title %>" 
      id="title-input"
    >
    <label for="ingredients">Ingredients</label>
    <input 
      type="text"
      name="ingredient"
      value="<%= meal.ingredient %>"
      id="ingredient-input"
    >
    <label for="cookTime">Cook Time</label>
    <input 
      type="text"
      name="cookTime"
      value="<%= meal.cookTime %>"
      id="cook-time-input"
    >
    <button type="submit">Save Meal</button>
  </form>
</main>

<%- include("../partials/footer") %>