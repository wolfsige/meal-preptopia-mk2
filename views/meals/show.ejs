<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Title: </div>
    <div>
      <%= meal.title %>
      <a href="/meals/<%= meal._id %>/edit">
        <button>Edit Meal</button>
      </a>
    </div>
    <div>Cook Time: </div>
    <div><%= meal.cookTime %> minutes</div> 
    <div>Ingredients: </div>
    <div><%= meal.ingredient.join(', ') %></div>
    <div>Guide: </div>
    <div><%= meal.guide %></div>
    <div>Vegan: </div>
    <div><%= meal.vegan ? 'Yes' : 'No' %></div>
    <div>Vegetarian: </div>
    <div><%= meal.vegetarian ? 'Yes' : 'No' %></div>
  </section>
</main>
  
<%- include('../partials/footer') %>