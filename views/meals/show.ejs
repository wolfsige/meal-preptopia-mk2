<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Title:
      <%= meal.title %>
      <a href="/meals/<%= meal._id %>/edit">
        <button>Edit Meal</button>
      </a>
    </div>

    <div>
      Cook Time: <%= meal.cookTime %> 
      min. Vegan: <%= meal.vegan ? 'Yes' : 'No' %> 
      Vegetarian: <%= meal.vegetarian ? 'Yes' : 'No' %>
    </div>

    <div>Ingredients: </div>
    
    <% for (let i = 0; i < meal.ingredient.length; i++) { %>
      
      <%= meal.ingredient[i] %></br>

    <% } %>
    
    <div>Guide: </div>
    <% for (let i = 0; i < meal.guide.length; i++) { %>
      
      <%= meal.guide[i] %></br>

    <% } %>
  </section>
</main>
  
<%- include('../partials/footer') %>