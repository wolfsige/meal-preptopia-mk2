<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h3>Enter a New Movie</h3>
  <form id="new-form" action="/meals" method="POST">
    <label>Title:
      <input type="text" name="title">
    </label><br>
    <label>Cook Time:
      <input type="text" name="cookTime">
    </label><br>
    <label>Ingredients (separate actors with commas):
      <input type="text" name="ingredient">
    </label><br>
    <label>Guide:
      <input type="text" name="guide">
    </label><br>
    <label>Vegan:
      <input type="checkbox" name="vegan" checked>
    </label><br>
    <label>Vegetarian:
      <input type="checkbox" name="vegetarian" checked>
    </label><br>
    <button type="submit">Add Meal</button>
  </form>
  <a href="/">index</a>
